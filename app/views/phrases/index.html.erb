<% provide(:title, "新着フレーズ") %>

  <!-- パンくずリスト -->
  <ol class="breadcrumb">
    <li>
      <%= link_to 'トップ', root_path %>
      <span class="divider">/</span>
    </li>
    <li class="active">新着</li>
  </ol>

  <!-- page header -->
  <div class="page-header">
    <h1><span class="ph_category_name">新着</span></h1>
  </div>

<% if @phrases.any? %>
  <ul class="unstyled">
    <% @phrases.each do |phrase| %>
      <li class="ph_phrase_item">
        <%= link_to phrase.japanese, phrase %>
      </li>
    <% end %>
  </ul>

  <%= render 'shared/pagination', object: @phrases %>
<% else %>
  新着のフレーズはありません。
<% end %>

