<% provide(:title, "『#{@phrase.japanese}』を英語で言うと『#{@phrase.english}』 | ワンフレーズで始めるミニ英語ブログ『Phrasee』") %>
<% provide(:description, "『#{@phrase.japanese}』を英語で言うと『#{@phrase.english}』") %>

<!-- main -->
<div class="container">
  
  <!-- パンくずリスト -->
  <ol class="breadcrumb">
    <li>
      <%= link_to 'トップ', root_path %>
      <span class="divider">/</span>
    </li>
     <li>
      <%= link_to 'カテゴリー', categories_path %>
      <span class="divider">/</span>
    </li>   
    <li>
      <%= link_to @phrase.category.category_name, category_path(@phrase.category.id) %>
      <span class="divider">/</span>
    </li>
    <li class="active"><%= @phrase.japanese %></li>
  </ol>

  <!-- 投稿フレーズ -->
  <div class="container">
    <div class="well show_phrase_container">
      <%= render 'shared/phrase-social' %>

      <h1 class="title_phrase"><%= link_to @phrase.japanese, @phrase %></h1>
      <h1 class="title_phrase"><%= link_to @phrase.english, @phrase %></h1>
      
      <div>
        <!-- お気に入り追加/削除、フレーズ編集/削除ボタン -->
        <% if user_signed_in? && @phrase.user == current_user %>
          <%= link_to "編集する", edit_phrase_path(@phrase), class:"btn btn-mini" %>
          <%= link_to "削除する", phrase_path, method: :delete, data:{ confirm:"このフレーズを削除しますか?" }, 
                title:@phrase.japanese, class:"btn btn-mini btn-danger" %>
        <% else %>
          <!-- お気に入り追加/削除フォーム（ボタン） -->
          <%= render 'favorites/favorite_form' %>
        <% end %>


      </div>

    </div>

    <!-- 出典・引用元 -->
    <% unless @phrase.source.blank?  %>
    <p class="muted">
      <small>出典・参考：</small><%= show_linkable_source(@phrase.source) %>
    </p>
    <% end %>  
  </div>

  <!-- 投稿者 -->
  <div class="media">

      <!-- メンバー画像 -->
      <%= link_to user_path(@phrase.user), { class:"pull-left", title:"#{@phrase.user.name}さんのフレーズブックはこちら" } do %>
        <%= render partial: 'devise/shared/profile_image', locals:{ user: @phrase.user, type: :thumb } %>
      <% end %>

      <!-- エピソード本文 -->
      <div class="media-body">
        <h4 class="media-heading"><%= link_to @phrase.user.name, user_path(@phrase.user), title:"#{@phrase.user.name}さんのフレーズブックはこちら" %></h4>
        <p class="muted"><%= @phrase.updated_at.to_s(:db) %></p><%# UTCからJST（日本時間）に変換 %>
        <%= simple_format(show_linkable_source(@phrase.story), class:"lead") %>
      </div>
    </div>

  <!-- 次へ -->
  <p><%= link_to '次を見る→『'+@next.japanese+'』', @next if @next %></p>
  <%#= @phrases.map{|p|p.japanese} %><%# 同カテゴリフレーズ %>

  <br>

  <p><%= link_to "#{@phrase.user.name}さんの投稿フレーズ一覧を見る", posts_user_path(@phrase.user), title:"#{@phrase.user.name}さんの投稿フレーズ一覧はこちら"  %></p>
  <p><%= link_to "『#{@phrase.category.category_name}』カテゴリーの英語フレーズ一覧を見る" , category_path(@phrase.category.id), title:"『#{@phrase.category.category_name}』カテゴリーの英語フレーズ一覧はこちら" %></p>


  <%# アカウント登録へのリンク %>
  <%= render 'shared/pr' %>


  <!--/div-->
  <hr> 

  <!-- コメント一覧 -->
  <%= render 'comments/comments_list', { comments: @comments } %>
  <p>&nbsp;</p>
  <!-- コメント投稿フォーム -->
  <%= render 'comments/comment_form', { url_path: comments_path, http_req: :post } %>


  <p>&nbsp;</p>
  <%= render 'shared/categories_link' %>
  <%= render 'shared/post_phrase_link' %>

  <%= render 'shared/start-phrasee_link' %>

  <p>&nbsp;</p>
  <p>&nbsp;</p>
  <%= render 'shared/top-page_link' %>
</div>

<script type="text/javascript">
$(function(){
  $("span.label-important").remove();
});
</script>