  <div class="container">

    <h4>コメント</h4>
    <% if @comments.any? %>
    <ul class="media-list">
    <% @comments.each do |comment| %>
      
      <%# コメントした人 %>
      <% commented_user = User.find(comment.user_id) %>

      <%# コメント内容 %>
      <li class="media">

        <%= link_to user_path(comment.user_id), { class:"pull-left" } do %>
        
        <% if commented_user.profile_image? %>
          <%= image_tag(commented_user.profile_image, { alt:"user-image", size:"64x64" } ) %>
        <% else %>
          <%= default_user_image_tag.html_safe %>
        <% end %>
        


          <%# ※あとでプロフィール画像入れる %>
          <%# comment.user.profile_img %>
          <%#= image_tag('service/8566716_aa614fe042_image.jpg', { alt:"post-icon", size:"80x80" } ) %>

          <!-- img class="media-object img-polaroid" data-src="holder.js/64x64" alt="64x64" src="data:image/png;base64," -->
        <% end %>

        <div class="media-body">
          <h4 class="media-heading"><%= link_to commented_user.name, user_path(comment.user_id) %></h4>
          <p class="muted"><%= comment.created_at.to_s(:db) %><%# UTCからJST（日本時間）に変換 %>
          <p><%= comment.content %></p>
        </div>
        <hr>
      </li>
      <li class="divider"></li><%# 区切り線 %>
    <% end %> 
    </ul>
    <% else %>
      コメントはまだありません。
    <% end %>
  </div>