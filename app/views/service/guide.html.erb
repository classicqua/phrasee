  <ol class="breadcrumb">
    <li>
      <%= link_to 'トップ', root_path %>
      <span class="divider">/</span>
    </li>
    <li class="active">ご利用ガイド</li>
  </ol>
  
<div class="container container_center">

  <!-- page header -->
  <div class="page-header">
    <h3>Phraseeとは？</h3>
    <p class="">ミニ英語ブログ × みんな ＝ ひとつの英語フレーズ集</p>
  </div>

  <%# メッセージ %>
  <%= render 'shared/guide-message_1' %>
