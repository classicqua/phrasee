<% provide(:title, "英語・英会話フレーズ|Phrasee|お気に入りフレーズ一覧") %>

  <!-- パンくずリスト -->
  <ol class="breadcrumb">
    <li>
      <%= link_to 'トップ', root_path %>
      <span class="divider">/</span>
    </li>
    <li>
      <%= link_to "メンバー", users_path %>
      <span class="divider">/</span>
    </li>
    <li>
      <%= link_to @user.name, user_path(@user) %>
      <span class="divider">/</span>
    </li>
    <li class="active">お気に入りフレーズ</li>
  </ol>
  
  <!-- page header -->
  <div class="page-header">
    <h1>
      <span class="ph_category_name"><%= @user.name %> さんのお気に入りフレーズ</span>
      <small>（<%= @user.favorites.count %>件）</small>
    </h1>
  </div>

  <%= render 'shared/phrases_list' %>

  <p>&nbsp;</p>
  <p><%= link_to "トップページへ", root_path %></p>
  <%= render 'shared/categories_link' %>
  <%= render 'shared/post_phrase_link' %>