<% provide(:title, "英語・英会話フレーズ カテゴリー一覧") %>
<% provide(:description, "英語・英会話フレーズ カテゴリー一覧") %>

  <div class="row-fluid">
    <%# サイトメインタイトル %>
    <%= render 'shared/main-title', tag:"h1" %>
  </div>

  <!-- パンくずリスト -->
  <ol class="breadcrumb">
    <li>
      <%= link_to 'トップ', root_path %>
      <span class="divider">/</span>
    </li>
    <li class="active">カテゴリー</li>
  </ol>
  
  <!-- page header -->
  <div class="page-header">
    <h2><span class="ph_category_name">カテゴリー 一覧</span></h2>
  </div>

  <ul class="ph_caetgories_list">
    <% @categories.each do |category| %>
      <li class="ph_phrase_item">
        <%= link_to category_path(category), { title:"『#{category.category_name}』関連の英語フレーズはこちら" } do %>
        <%= category.category_name %><small>（<%= category.phrases.count %>件）</small>
        <% end %>
      </li>
    <% end %>
  </ul>

<p>&nbsp;</p>
<%= render 'shared/post_phrase_link' %>

<%# ユーザー紹介 %>
<%= render 'shared/introduce-users' %>

<p>&nbsp;</p>
<%= render 'shared/top-page_link' %>