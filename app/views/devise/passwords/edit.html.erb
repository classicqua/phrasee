<% provide(:title, "パスワード変更") %>
<% provide(:description, "このページからパスワード変更できます。") %>

  <div class="row-fluid">
    <%# サイトメインタイトル %>
    <%= render 'shared/main-title' %>
  </div>

<h3>パスワード変更</h3>

<%#= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%#= devise_error_messages! %>

<%= simple_form_for(resource, :as => resource_name, 
  :url => password_path(resource_name), 
  :html => { :method => :put, :class => 'form-vertical' }) do |f| %>

  <%= f.hidden_field :reset_password_token %>

  <%= f.error_notification %>
  <%= display_base_errors resource %>


  <%= f.input :password, :autocomplete => "off",  :label => "新しいパスワード", hint:"" %>
  <%= f.input :password_confirmation, :label => "新しいパスワード再入力（確認用）", hint:"" %>

  <div><%= f.button :submit, :class => 'btn-warning' %></div>

  <!--div>-->
    <%#= f.label :password, "新しいパスワード" %>
    <%#= f.password_field :password, :autofocus => true %>
  <!--/div>-->

  <!--div>-->
    <%#= f.label :password_confirmation, "新しいパスワード再入力（確認用）" %>
    <%#= f.password_field :password_confirmation %>
  <!--/div>-->

  <!--div><%#= f.submit "パスワードを変更する", :class => 'btn' %></div>-->
<% end %>

<%= render "devise/shared/links" %>
