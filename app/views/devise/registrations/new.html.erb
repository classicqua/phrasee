<% provide(:title, "新規会員登録（無料）") %>
<% provide(:description, "このページから新規会員登録ができます。") %>

  <div class="row-fluid">
    <%# サイトメインタイトル %>
    <%= render 'shared/main-title' %>
  </div>

<%= render "devise/shared/welcome-message"%>

<div class="container">
   <!-- page header -->
  <div class="page-header">

  <h3>新規会員登録（無料）</h3>
  <span class="lead"><small>登録完了後、あなた用のページが作成されます。</small></span>
  </div> 

  <%= image_tag('signup/signup_step1.jpg', { alt:"step1" } ) %>
 
  <div class="form_container"> 
    <!-- フォーム -->
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
    	<%= f.error_notification %>
    	<%= display_base_errors resource %>
    	<%= f.input :name, :autofocus => true, :required => true %>
    	<%= f.input :email, :required => true %>
    	<%= f.input :password, :required => true, hint:"<small>※6文字以上</small>" %>
    	<%= f.input :password_confirmation, :required => true %>

      <%# 利用規約 %>
      <div class="agreement">
        <label class="checkbox">
          <%= f.input :agreement, :as => :hidden %><%# エラーメッセージ表示用 %>
          <%= f.check_box :agreement, :as => :boolean, checked:false %>
          <%= link_to "利用規約", terms_path, { target:"blank", rel:"nofollow" } %>に同意する
        </label>
        <small class="help-block">※利用規約に同意できない場合は登録をご遠慮ください。</small>
      </div>

      <%= f.button :submit, '規約に同意して登録する', :class => 'btn' %>
    <% end %>

    <%= render "devise/shared/links" if resource.errors.any?  %>

    <p>&nbsp;</p>
    <%= render 'shared/goiken_link' %>  
    <p>&nbsp;</p>
    <%= render 'shared/top-page_link' %>  
  </div>
</div>
