<% provide(:title, "英語・英会話フレーズ|Phrasee|新規会員登録（無料）") %>

<div class="container">
   <!-- page header -->
  <div class="page-header">
  <h3>新規会員登録（無料）</h3>
  </div> 

  <%= image_tag('signup/signup_step1.jpg', { alt:"step1" } ) %>
 
  <div class="form_container"> 
    <!-- フォーム -->
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
    	<%= f.error_notification %>
    	<%= display_base_errors resource %>
    	<%= f.input :name, :autofocus => true, :required => true %>
    	<%= f.input :email, :required => true %>
    	<%= f.input :password, :required => true %>
    	<%= f.input :password_confirmation, :required => true %>
      <p><%= link_to "利用規約を見る", terms_path %></p>
      <br/>
      <%= f.button :submit, 'ご本人確認メール送信', :class => 'btn' %>
      <small class="help-block">※利用規約に同意できない場合はメールを送信しないでください。</small>
    <% end %>

    <%= render "devise/shared/links" if resource.errors.any?  %>

    <p>&nbsp;</p>
    <p><%= link_to "トップページへ", root_path %></p>    
  </div>
</div>
