<% provide(:title, "アカウント設定") %>
<% provide(:description, "このページからアカウント設定ができます。") %>

<div class="container">

  <div class="row-fluid">
    <%# サイトメインタイトル %>
    <%= render 'shared/main-title' %>
  </div>
  
  <!-- page header -->
  <div class="page-header">
    <h3>アカウント設定</h3>
    <p class="muted"><i class='icon-lock'></i>&nbsp;この画面は他の人からは見えません</p>
  </div>

  <!--div class="form_container" -->
    <%= simple_form_for(resource, :as => resource_name, 
      :url => registration_path(resource_name), 
      :html => { :method => :put, :multipart => true, :class => 'form-vertical' }) do |f| %>
      <%= f.error_notification %>
      <%#= display_base_errors resource %>

      <%# 登録情報フォーム部品 %>
      <%= render :partial => 'devise/shared/account_items', :locals=>{:f=>f, :user => current_user} %>

      <%# 更新用パスワード %>  
      <%= f.input :current_password, :required => true %>
      
      <%= f.button :submit, :class => 'btn-warning' %>
    <% end %>
  <!-- /div -->

  <p>&nbsp;</p>
  <p><%= link_to "退会はこちらから", resign_path, rel:"nofollow" %></p>   
  <%= render 'shared/top-page_link' %>
</div>