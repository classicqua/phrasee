<% provide(:title, "ログイン | ワンフレーズで始めるミニ英語ブログ『Phrasee』") %>
<% provide(:description, "会員登録済の方はこちらからどうぞ。") %>

<div class="container">
  <!-- page header -->
  <div class="page-header">
    <h3>ログイン</h3>
  </div>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), input_html: { class:"input-xxlarge" }, :html => {:class => 'form-vertical' }) do |f| %>
    <%= f.input :email, :autofocus => true %>
    <%= f.input :password %>
    <%#= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    <p><%=  f.input_field :remember_me, as: :boolean, inline_label: 'ログインしたままにする' if devise_mapping.rememberable? %></p>
    <p>&nbsp;</p>
    <%= f.button :submit, "ログインする", :class => 'btn-primary' %>

  <% end %>
  <%= render "devise/shared/links" %>

  <p>&nbsp;</p>
  <%= render 'shared/top-page_link' %>
</div>